<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <com.willy.ratingbar.RotationRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rateNumber"
        app:srb_clickable="true"
        app:srb_scrollable="true" />

    <TextView
        android:id="@+id/totalRatingLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginStart="16dp"
        android:text="@string/totalRate"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/totalRatingtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/totalRatingLbl"
        android:textColor="@color/colorPrimaryDark" />
</RelativeLayout>